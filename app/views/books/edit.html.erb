<h1>Editing Book</h1>
<% if @book.errors.any? %>
<h2><%= @book.errors.count %> errors prohibited this book being saved:</h2>
  <div id="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <div class="push"><%= f.submit 'Update Book' %></div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
  
<% end %>